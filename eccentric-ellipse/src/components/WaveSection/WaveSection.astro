---
import './WaveSection.scss';
---
<section>
  <div class="header">
    <div class="inner-header flex">
      <div class="logo">
        <img src="Icons/RyleySoftIcon.png"> 
      </div>
      <h1>Ryley Software Services</h1>
    </div>

    <div>
      <svg
        class="waves"
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        viewBox="0 24 150 28"
        preserveAspectRatio="none"
        shape-rendering="auto"
      >
        <defs>
          <path
            id="gentle-wave"
            d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"
          ></path>
        </defs>
        <g class="parallax">
          <use
            xlink:href="#gentle-wave"
            x="48"
            y="0"
            fill="rgba(92,197,92,0.7"></use>
          <use
            xlink:href="#gentle-wave"
            x="48"
            y="3"
            fill="rgba(92,197,92,0.5)"></use>
          <use
            xlink:href="#gentle-wave"
            x="48"
            y="5"
            fill="rgba(92,197,92,0.3)"></use>
          <use xlink:href="#gentle-wave" x="48" y="7" fill="rgba(92,197,92)"></use>
        </g>
      </svg>
    </div>
  </div>
</section>
